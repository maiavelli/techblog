<div class="hero-body">
    <div class="container has-text-centered">
        <p class="title"> Tech Blog </p>
        <p class="subtitle"> thoughts, opinions, and articles on the current state of tech</p>
    </div>
</div>

<section>
    <div class="container">
        <div class="box">
            <div class="content">
                {{#each posts as |post|}}
                <h4> {{title}} </h4>
                    <article class="post">
                        {{> post_body}}
                    {{/each}}
                </article>
            </div>
        </div>
    </div>
</section>
