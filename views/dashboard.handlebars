<section>
    <div class="container">
        <div class="content mt-3">
            <h3>{{username}}'s Posts</h3>
        </div>

        {{#if postlength}}
        {{#each posts as |post|}}
        <div class="box">
            <div class="content">
                <h4> {{title}} </h4>

                <div class="buttons has-addons is-right">
                    <button class="button is-info is-small" id="edit-post" data-toggle="modal" data-target="#post{{id}}">
                        <span class="icon is-small">
                            <i class="fas fa-pencil"></i>
                        </span>
                        <span>
                            <a class="has-text-white">Edit</a>
                        </span>
                    </button>

                    <button class="button is-danger is-small">
                        <span class="icon is-small">
                            <i class="fas fa-trash-can"></i>
                        </span>
                        <span>
                            <a class="has-text-white">Delete</a>
                        </span>
                    </button>

                    <p>{{post_body}}</p>
                    <p>{{format_date created_at}} </p>
                </div>

                <button class="button is-info"> 
                    <span class="icon is-small">
                        <i class="fas fa-circle-plus"></i>
                    </span>
                    <span> 
                    <a class="has-text-white" href="./new-post.html"> Create New Post </a>
                    </span>
                </button>
            </div>
        </div>
</section>

<section>
    <div class="modal">
        <div class="modal-background"></div>
        <div class="modal-content">
            <h5>Editing Post: {{title}} </h5>
            <button class="modal-close" aria-label="close"></button>

            <div class="field">
                <label class="label"> Edit Title </label>
                <div class="control">
                    <input class="input" id="title{{id}}" type="text" placeholder="{{title}}" >
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <label class="label"> Edit Body </label>
                    <textarea class="textarea" id="body{{id}}" placeholder="{{post_body}}"></textarea>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-success">
                        <span class="icon is-small">
                            <i class="fas fa-lock"></i>
                        </span>
                        <span> Save </span>
                    </button>
                </div>

                <div class="control">
                    <button class="button is-danger">
                        <span  class="icon is-small">
                            <i class="fas fa-xmark"></i>
                        </span> 
                        <span> Cancel </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

